{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "declaration": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}